<odoo>
<data>
    <record id="smv_instituto_classroom_tree" model="ir.ui.view">
        <field name="name">smv_instituto.classroom.tree</field>
        <field name="model">smv_instituto.classroom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="capacity"/>
                <field name="location"/>
            </tree>
        </field>
    </record>

    <record id="smv_instituto_classroom_form" model="ir.ui.view">
        <field name="name">smv_instituto.classroom.form</field>
        <field name="model">smv_instituto.classroom</field>
        <field name="arch" type="xml">
            <form>
                <group colspan="2" col ="2">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="capacity"/>
                    <field name="location"/>
                </group>
            </form>
        </field>
    </record>
</data>
</odoo>
<odoo>
<data>
    <record id="smv_instituto_classroom_tree" model="ir.ui.view">
        <field name="name">smv_instituto.classroom.tree</field>
        <field name="model">smv_instituto.classroom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="capacity"/>
                <field name="location"/>
            </tree>
        </field>
    </record>

    <record id="smv_instituto_classroom_form" model="ir.ui.view">
        <field name="name">smv_instituto.classroom.form</field>
        <field name="model">smv_instituto.classroom</field>
        <field name="arch" type="xml">
            <form>
                <group colspan="2" col ="2">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="capacity"/>
                    <field name="location"/>
                </group>
            </form>
        </field>
    </record>

    <record id="smv_instituto_classroom_action" model="ir.actions.act_window">
        <field name="name">Classrooms</field>
        <field name="res_model">smv_instituto.classroom</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new classroom.
            </p>
        </field>
    </record>
    <menuitem id="smv_instituto_menu_main" name="Instituto"/>
    <menuitem id="smv_instituto_menu_classroom" name="Classrooms" parent="smv_instituto_menu_main" action="smv_instituto_classroom_action"/>
</data>
</odoo>
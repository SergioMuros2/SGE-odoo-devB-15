<odoo>
    <data>
        <record id="smv_instituto_course_tree" model="ir.ui.view">
            <field name="name">smv_instituto.course.tree</field>
            <field name="model">smv_instituto.course</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="year"/>
                    <field name="group"/>
                </tree>
            </field>
        </record>

        <record id="smv_instituto_course_form" model="ir.ui.view">
            <field name="name">smv_instituto.course.form</field>
            <field name="model">smv_instituto.course</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group colspan="2" col="2">
                            <field name="year"/>
                            <field name="group"/>
                            <field name="code"/>
                            <field name="teacher_id"/>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="student_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Classrooms">
                                <field name="classroom_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="location"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="smv_instituto_course_action" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="res_model">smv_instituto.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new course.
                </p>
            </field>
        </record>

        <menuitem id="smv_instituto_menu_course" name="Courses" parent="smv_instituto_menu_main" action="smv_instituto_course_action"/>
    </data>
</odoo>
<odoo>
    <data>
    <record id="smv_instituto_subject_tree" model="ir.ui.view">
      <field name="name">smv_instituto.subject.tree</field>
      <field name="model">smv_instituto.subject</field>
      <field name="arch" type="xml">
          <tree>
              <field name="name"/>
              <field name="weekly_hours"/>
              <field name="subject_type"/>   
          </tree>
      </field>
    </record>

    <record id="smv_instituto_subject_form" model="ir.ui.view">
      <field name="name">smv_instituto.subject.form</field>
      <field name="model">smv_instituto.subject</field>
      <field name="arch" type="xml">
          <form>
                <group colspan="2" col ="2">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="weekly_hours"/>
                    <field name="subject_type"/>
                </group>
          </form>
        </field>
    </record>
    </data>
</odoo>
<odoo>
    <data>
    <record id="smv_instituto_subject_tree" model="ir.ui.view">
      <field name="name">smv_instituto.subject.tree</field>
      <field name="model">smv_instituto.subject</field>
      <field name="arch" type="xml">
          <tree>
              <field name="name"/>
              <field name="weekly_hours"/>
              <field name="subject_type"/>   
          </tree>
      </field>
    </record>

    <record id="smv_instituto_subject_form" model="ir.ui.view">
      <field name="name">smv_instituto.subject.form</field>
      <field name="model">smv_instituto.subject</field>
      <field name="arch" type="xml">
          <form>
                <group colspan="2" col ="2">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="weekly_hours"/>
                    <field name="subject_type"/>
                </group>
          </form>
        </field>
    </record>

    <record id="smv_instituto_subject_action" model="ir.actions.act_window">
      <field name="name">Subjects</field>
      <field name="res_model">smv_instituto.subject</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">
              Click to create a new subject.
          </p>
      </field>
    </record>

    <menuitem id="smv_instituto_menu_subject" name="Subjects" parent="smv_instituto_menu_main" action="smv_instituto_subject_action"/>
    </data>
</odoo>
<odoo>
    <data>
        <record id="smv_instituto_student_tree" model="ir.ui.view">
            <field name="name">smv_instituto.student.tree</field>
            <field name="model">smv_instituto.student</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="dni"/>
                    <field name="gender"/>
                    <field name="birth_date"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record id="smv_instituto_student_form" model="ir.ui.view">
            <field name="name">smv_instituto.student.form</field>
            <field name="model">smv_instituto.student</field>
            <field name="arch" type="xml">
                <form>
                    <group colspan="2" col ="2">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="dni"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="birth_date"/>
                        <field name="gender"/>
                        <field name="course_id"/>
                        <field name="classroom_id"/>
                        <field name="subject_ids" widget="many2many_tags"/>
                        <field name="profile_image" widget="image" class="oe_avatar oe_left"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="smv_instituto_student_action" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">smv_instituto.student</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new student.
                </p>
            </field>
        </record>

        <menuitem id="smv_instituto_menu_student" name="Students" parent="smv_instituto_menu_main" action="smv_instituto_student_action"/>
    </data>
</odoo>
